<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <!-- Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f8f9fa"
        android:padding="8dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="←"
            android:textSize="18sp"
            android:background="@drawable/nav_button"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/forwardBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="→"
            android:textSize="18sp"
            android:background="@drawable/nav_button"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/urlInput"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Search YouTube or enter URL"
            android:background="@drawable/url_input_background"
            android:padding="8dp"
            android:textSize="14sp"
            android:imeOptions="actionGo"
            android:inputType="textUri" />

        <Button
            android:id="@+id/goBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="Go"
            android:textSize="12sp"
            android:background="@drawable/go_button"
            android:textColor="#ffffff"
            android:layout_marginStart="4dp" />

        <Button
            android:id="@+id/refreshBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="↻"
            android:textSize="16sp"
            android:background="@drawable/nav_button"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <!-- Stats Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#e9ecef"
        android:padding="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/statsText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🛡️ 0 ads blocked | 📊 0.0 MB saved"
            android:textSize="12sp"
            android:textColor="#495057" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎥 YouTube Browser"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#007bff" />

    </LinearLayout>

    <!-- WebView -->
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
